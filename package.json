{
  "name": "@emberwatch/ember-language-server",
  "description": "A language server implementation for Ember.js projects.",
  "version": "0.2.2",
  "contributors": [
    "Aleksandr Kanunnikov <lifeart92@gmail.com>",
    "Tobias Bieniek <tobias.bieniek@gmail.com>",
    "Thomas Sauer <t-sauer@outlook.de>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lifeart/ember-language-server.git"
  },
  "engines": {
    "node": ">= 10.16.3"
  },
  "main": "lib/start-server.js",
  "typings": "lib/start-server.d.ts",
  "dependencies": {
    "@glimmer/syntax": "^0.73.1",
    "ast-types": "^0.14.2",
    "cross-spawn": "^7.0.3",
    "dag-map": "^2.0.2",
    "ember-meta-explorer": "^0.2.1",
    "ember-template-recast": "^5.0.1",
    "@lifeart/ember-extract-inline-templates": "^2.0.0",
    "find-up": "^5.0.0",
    "fs-extra": "^8.1.0",
    "fuzzaldrin": "^2.1.0",
    "i": "^0.3.6",
    "lodash": "^4.17.20",
    "memoizee": "^0.4.15",
    "rimraf": "^3.0.2",
    "util": "^0.12.3",
    "vscode-languageserver": "^6.1.1",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^2.1.1",
    "walk-sync": "^2.2.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/estree": "*",
    "@types/fuzzaldrin": "^2.1.3",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/memoizee": "^0.4.5",
    "@types/node": "^12.12.5",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "broccoli-test-helper": "^2.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^10.5.3",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageserver-protocol": "^3.14.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "printWidth": 160,
    "singleQuote": true,
    "arrowParens": "always",
    "endOfLine": "auto",
    "parser": "typescript"
  },
  "scripts": {
    "changelog": "lerna-changelog",
    "clean": "rimraf lib/",
    "compile": "tsc --skipLibCheck -p .",
    "lint": "eslint . --ext js,ts",
    "prepublish": "yarn clean && yarn compile",
    "test": "jest",
    "test:coverage": "rimraf inst/ && nyc instrument lib inst && nyc --no-clean --reporter=clover --reporter=json --reporter=lcov yarn run jest --no-coverage",
    "watch": "tsc --watch -p ."
  },
  "volta": {
    "node": "10.16.3",
    "yarn": "1.22.4"
  }
}
